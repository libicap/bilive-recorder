{
    "parser": "babel-eslint",
    "env":{
        "node": true,
        "es6":true
    },
    "extends": ["eslint:recommended", "google"],
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "no-console": 0,
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}